<%= form_with model: User.new, url: {controller: 'users', action: 'register'} do |f| %>
  <div class="form-group">
    <%= f.text_field :email, class: 'form-control bg-dark', placeholder: "E-mail" %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control bg-dark', placeholder: "Nickname" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control bg-dark', placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control bg-dark', placeholder: 'Password confirmation' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Register', class: 'btn btn-success bg-dark' %>
  </div>
<% end %>