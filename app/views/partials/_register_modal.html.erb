<%= render 'partials/modal', open_button: 'Register', title: 'Register', id: 'register' do %>
  <div class="modal-body">
    <%= form_with model: User.new, url: {controller: 'users', action: 'register'} do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: 'form-control', placeholder: "E-mail" %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Nickname" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Register', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
<% end %>