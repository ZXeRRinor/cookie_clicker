<%= render 'partials/modal', open_button: 'Log in', title: 'Log in', id: 'login' do %>
  <div class="modal-body">
    <%= form_with model: User.new, url: {controller: 'sessions', action: 'login'} do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: 'form-control bg-dark', placeholder: 'Enter e-mail' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control bg-dark', placeholder: 'Password' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Log in', class: 'btn btn-success bg-dark login_btn' %>
      </div>
    <% end %>
    <p>
      <button class="btn btn-warning bg-dark forg_pass_btn" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Я забыл пароль!
      </button>
    </p>
    <div class="collapse" id="collapseExample">
      <div class="card card-body">
        <span>Ну зарегистрируй новый аккаунт, тут всё равно можно в качестве мыла писать всякую ересь! Оно даже не проверяется!</span>
        <br/>
        <%= link_to 'Новый аккаунт!', {controller: 'users', action: 'register'}, class: 'btn btn-primary bg-dark' %>
      </div>
    </div>
  </div>
<% end %>