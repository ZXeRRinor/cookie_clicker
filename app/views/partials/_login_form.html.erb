<%= form_with model: User.new, url: {controller: 'sessions', action: 'login'} do |f| %>
  <div class="form-group">
    <%= f.text_field :email, class: 'form-control bg-dark', placeholder: 'Enter e-mail' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control bg-dark', placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Log in', class: 'btn btn-success bg-dark login_btn' %>
  </div>
<% end %>