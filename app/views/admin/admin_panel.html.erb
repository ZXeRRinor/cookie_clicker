<%= stylesheet_pack_tag 'stylesheets/admin/admin_panel' %>

<div class="root container">
  <%= render 'partials/collapse', btn_text: 'User list', id: 'user_list' do %>
    <table class="table table-bordered table-sm bg-dark text-light">
      <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Name</th>
        <th scope="col">Permissions</th>
        <th scope="col">Created at</th>
        <th scope="col">Updated at</th>
        <th scope="col">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr class="user" id="<%= user.id %>">
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.permissions %></td>
          <td class="date"><%= user.created_at %></td>
          <td class="date"><%= user.updated_at %></td>
          <td class="table_buttons">
            <%= render 'partials/additional_links', ctrlr: 'admin', id: "user_#{ user.id }", actCh: 'change_record_form', actDel: 'delete_record' %>
          </td>
        </tr>
      <% end %>
      <%= form_with model: User.new, method: 'post', url: {controller: 'admin', action: 'create_record', record_type: 'user'} do |f| %>
        <tr>
          <td><%= f.text_field :id, class: 'form-control bg-dark', placeholder: 'ID' %></td>
          <td><%= f.text_field :email, class: 'form-control bg-dark', placeholder: 'E-Mail' %></td>
          <td><%= f.text_field :name, class: 'form-control bg-dark', placeholder: 'Name' %></td>
          <td><%= f.text_field :permissions, class: 'form-control bg-dark', placeholder: 'Permissions' %></td>
          <td><%= f.text_field :created_at, class: 'form-control bg-dark', placeholder: 'Created at' %></td>
          <td><%= f.text_field :updated_at, class: 'form-control bg-dark', placeholder: 'Updated at' %></td>
        </tr>
        <tr>
          <td colspan="2">
            <%= f.text_field :password, class: 'form-control bg-dark', placeholder: 'Password' %>
          </td>
          <td>
            <%= f.submit 'Force add to database', class: 'btn btn-outline-warning' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
