<html>
  <head>

  </head>
  <body>
    <div>
      <%= form_with model: @message, method: 'post', url: {controller: 'messages', action: 'create', id: @id} do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', placeholder: 'Enter ' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Write', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </body>
</html>