<html>
  <head>
    <%= stylesheet_pack_tag 'stylesheets/posts/show' %>
  </head>
  <body>
    <div class="root">
      <div class="post">
        <div class="title"><%= @post.title %></div>
        <hr class="my-4">
        <div class="content"><%= @post.content %></div>
      </div>
      <div class="message_list">
        <ul class="list-group list-group-flush">
          <% @messages.each do |message| %>
            <li class="list-group-item list-group-item-primary message">
              <div class="msg_author"><%= User.find_by(id: message.user_id).email %></div>
              <div class="msg_content">
                <%= message.content %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="message_form">
        <%= form_with model: @new_message, method: 'post', url: {controller: 'messages', action: 'create'} do |f| %>
          <div class="form-group">
            <%= f.text_area :content, class: 'form-control', size: '100x10', placeholder: 'Enter your message' %>
          </div>
          <div class="form-group">
            <%= f.submit 'Write', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>