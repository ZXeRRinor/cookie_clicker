<div class="root">
  <div class="new_post_form_container">
    <%= form_with model: @post, method: 'post', url: {controller: 'posts', action: 'create'} do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title of new subforum' %>
      </div>
      <div class="form-group">
        <%= f.text_field :content, class: 'form-control', placeholder: 'Enter content of new subforum' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>